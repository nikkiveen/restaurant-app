<div id="reservation-form">
  <%= form_tag "/reservations", method: :post do %>
    <div>
      <%= hidden_field_tag :restaurant_id, params[:restaurant_id]  %>
    </div>
    <div>
      <p> Date: <%= params[:reservation][:date] %>
      <%= hidden_field_tag :date, params[:reservation][:date]  %>
    </div>
      <div>
      <p> # of Diners: <%= params[:head_count] %>
      <%= hidden_field_tag :head_count, params[:head_count]  %>
    </div>
    <div>
      <%= label_tag :timeslot, "Time"%>
      <%= collection_select :timeslot, :timeslot_id, @timeslots, :id, :time %>
    </div>
    <div>
        <%= submit_tag "Make Reservation" %>
    </div>
  <% end %>
</div>
